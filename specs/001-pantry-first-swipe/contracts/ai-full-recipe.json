{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AI Full Recipe Response",
  "type": "object",
  "required": [
    "title",
    "description",
    "ingredients",
    "instructions",
    "timeMinutes",
    "calories",
    "equipment"
  ],
  "properties": {
    "title": { "type": "string", "minLength": 1 },
    "description": { "type": "string" },
    "ingredients": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1,
      "description": "Ingredients with quantities (display strings)."
    },
    "instructions": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "timeMinutes": { "type": "integer", "minimum": 1 },
    "calories": { "type": "integer", "minimum": 0 },
    "equipment": { "type": "array", "items": { "type": "string" } },
    "prep_time": { "type": "string" },
    "cook_time": { "type": "string" },
    "temperatures": { "type": "object" }
  },
  "additionalProperties": true
}
